<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="49.8429"
            mapbox:mapbox_cameraTargetLng="24.0311"
            mapbox:mapbox_cameraZoom="12"
            mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/green_background"
            app:elevation="0sp"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="10sp"
            app:fabCradleRoundedCornerRadius="15sp"
            app:fabCradleVerticalOffset="0sp" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:backgroundTint="@color/green_background"
            app:elevation="0sp"
            app:fabAlignmentMode="center" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_icon"
            app:backgroundTint="@color/green_background"
            app:layout_anchor="@id/bottom_app_bar"
            app:maxImageSize="29dp" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_marginTop="-10sp"
            app:layout_anchor="@+id/top_app_bar"
            app:layout_anchorGravity="center"
            app:srcCompat="@drawable/avatar_icon" />

        <ImageView
            android:id="@+id/search_field_back"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="70sp"
            app:srcCompat="@drawable/search_field" />

        <EditText
            android:id="@+id/search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70sp"
            android:layout_marginTop="62sp"
            android:layout_marginEnd="40sp"
            android:backgroundTint="#00000000"
            android:ems="10"
            android:inputType="text|textAutoComplete" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:elevation="0sp"
        android:src="@drawable/trophy_cup_icon"
        app:backgroundTint="@color/green_background"
        app:elevation="0sp"
        app:maxImageSize="35dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/trophy_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90sp"
        android:elevation="0sp"
        android:src="@drawable/route_icon"
        app:backgroundTint="@color/green_background"
        app:elevation="0sp"
        app:maxImageSize="33sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/statistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90sp"
        android:elevation="0sp"
        android:src="@drawable/statistic_icon"
        app:backgroundTint="@color/green_background"
        app:elevation="0sp"
        app:maxImageSize="33sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20sp"
        android:elevation="0sp"
        android:src="@drawable/profile_icon"
        app:backgroundTint="@color/green_background"
        app:elevation="0sp"
        app:maxImageSize="37sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0sp"
        android:elevation="0sp"
        android:src="@drawable/menu_icon"
        app:backgroundTint="@color/green_background"
        app:elevation="0sp"
        app:maxImageSize="32dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/three_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0sp"
        android:elevation="0sp"
        android:src="@drawable/three_point_icon"
        app:backgroundTint="@color/green_background"
        app:elevation="0sp"
        app:maxImageSize="32dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="23sp"
        android:layout_marginTop="58sp"
        android:elevation="0sp"
        android:src="@drawable/search_icon"
        app:backgroundTint="#00000000"
        app:elevation="0sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/startNavigationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22sp"
        android:layout_marginBottom="78sp"
        android:backgroundTint="@color/green_background"
        android:elevation="0sp"
        app:borderWidth="0sp"
        android:enabled="false"
        android:src="@drawable/navigation_icon"
        app:elevation="0sp"
        app:maxImageSize="28sp" />

</RelativeLayout>